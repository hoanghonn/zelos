<div id="<%= dom_id hackathon %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= hackathon.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= hackathon.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Image:</strong>
    <%= link_to hackathon.image.filename, hackathon.image, class: "text-gray-700 underline hover:no-underline" if hackathon.image.attached? %>
  </div>
</div>
