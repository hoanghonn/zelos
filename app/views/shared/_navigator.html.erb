<header class="sticky top-0 z-50 glass">
  <div class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-8">
        <%= link_to root_path, class: "text-2xl font-bold tracking-wider" do %>
          ZELOS
        <% end %>
        <nav class="hidden md:block">
          <ul class="flex space-x-8">
            <li class="relative group">
              <%= link_to hackathons_path, class: "flex items-center gap-2 py-2 hover:text-secondary-300 transition-colors" do %>
                Join a hackathon <i class="fas fa-chevron-down text-xs"></i>
              <% end %>
              <div class="absolute left-0 top-full w-48 glass rounded-lg p-3 invisible opacity-0 group-hover:visible group-hover:opacity-100 transition-all duration-300 transform origin-top scale-95 group-hover:scale-100">
                <%= link_to "Upcoming", hackathons_path, class: "block px-3 py-2 rounded hover:bg-white/10 transition-colors" %>
                <%= link_to "Ongoing", hackathons_path, class: "block px-3 py-2 rounded hover:bg-white/10 transition-colors" %>
                <%= link_to "Past", hackathons_path, class: "block px-3 py-2 rounded hover:bg-white/10 transition-colors" %>
              </div>
            </li>
            <li class="relative group">
              <a href="#" class="flex items-center gap-2 py-2 hover:text-secondary-300 transition-colors">
                Host a hackathon <i class="fas fa-chevron-down text-xs"></i>
              </a>
              <div class="absolute left-0 top-full w-48 glass rounded-lg p-3 invisible opacity-0 group-hover:visible group-hover:opacity-100 transition-all duration-300 transform origin-top scale-95 group-hover:scale-100">
                <a href="#" class="block px-3 py-2 rounded hover:bg-white/10 transition-colors">Create new</a>
                <a href="#" class="block px-3 py-2 rounded hover:bg-white/10 transition-colors">Manage existing</a>
                <a href="#" class="block px-3 py-2 rounded hover:bg-white/10 transition-colors">Resources</a>
              </div>
            </li>
            <li class="relative group">
              <a href="#" class="flex items-center gap-2 py-2 hover:text-secondary-300 transition-colors">
                Resources <i class="fas fa-chevron-down text-xs"></i>
              </a>
              <div class="absolute left-0 top-full w-48 glass rounded-lg p-3 invisible opacity-0 group-hover:visible group-hover:opacity-100 transition-all duration-300 transform origin-top scale-95 group-hover:scale-100">
                <a href="#" class="block px-3 py-2 rounded hover:bg-white/10 transition-colors">Blog</a>
                <a href="#" class="block px-3 py-2 rounded hover:bg-white/10 transition-colors">Documentation</a>
                <a href="#" class="block px-3 py-2 rounded hover:bg-white/10 transition-colors">API</a>
              </div>
            </li>
          </ul>
        </nav>
      </div>
      <div class="flex items-center gap-4">
        <button class="p-2 rounded-full hover:bg-white/10 transition-colors">
          <i class="fas fa-search"></i>
        </button>
        <a href="#" class="hidden sm:block hover:text-secondary-300 transition-colors">Log in</a>
        <a href="#" class="hidden sm:block px-4 py-2 rounded-full bg-gradient-to-r from-primary-500 to-secondary-500 hover:from-primary-600 hover:to-secondary-600 transition-colors">Sign up</a>
        <button id="mobile-menu-btn" class="md:hidden p-2 rounded-full hover:bg-white/10 transition-colors">
          <i class="fas fa-bars"></i>
        </button>
      </div>
    </div>
    <!-- Mobile menu -->
    <div id="mobile-menu" class="md:hidden hidden mt-4 glass rounded-lg p-4">
      <ul class="space-y-3">
        <li>
          <a href="#" class="flex items-center justify-between py-2 hover:text-secondary-300 transition-colors">
            Join a hackathon
            <i class="fas fa-chevron-right text-xs"></i>
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center justify-between py-2 hover:text-secondary-300 transition-colors">
            Host a hackathon
            <i class="fas fa-chevron-right text-xs"></i>
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center justify-between py-2 hover:text-secondary-300 transition-colors">
            Resources
            <i class="fas fa-chevron-right text-xs"></i>
          </a>
        </li>
        <li class="pt-3 border-t border-white/10">
          <a href="#" class="block py-2 hover:text-secondary-300 transition-colors">Log in</a>
        </li>
        <li>
          <a href="#" class="block text-center py-2 rounded-full bg-gradient-to-r from-primary-500 to-secondary-500 hover:from-primary-600 hover:to-secondary-600 transition-colors">Sign up</a>
        </li>
      </ul>
    </div>
  </div>
</header>
