<header class="sticky top-0 z-50">
  <div class="glass-card border-b border-white/20">
    <div class="container mx-auto px-4">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <%= link_to root_path, class: "text-2xl font-bold text-teal-600" do %>
            ZELOS
          <% end %>
        </div>
        <div class="flex items-center space-x-4">
          <div class="hidden md:flex md:items-center md:space-x-4">
            <%= link_to hackathons_path, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-teal-600 transition-colors" do %>
              Browse Hackathons
            <% end %>
            <%= link_to hackathons_path, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-teal-600 transition-colors" do %>
              Host a Hackathon
            <% end %><%= link_to hackathons_path, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-teal-600 transition-colors" do %>
              Resources
            <% end %>
          </div>
          <div class="flex items-center space-x-2">
            <%= link_to hackathons_path, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-teal-600 transition-colors" do %>
              Log in
            <% end %>
            <%= link_to hackathons_path, class: "px-4 py-2 rounded-md text-sm font-medium text-white bg-teal-600 hover:bg-teal-700 transition-colors" do %>
              Sign up
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>